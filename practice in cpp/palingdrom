
#include <iostream>
#include<string>
using namespace std;

//reverse a string
bool palingdrom(string& str){
    int start= 0;
       int end =str.length()-1;
      while(start<end){
          if(str[start] !=str[end]){
              return 0;
          }
          else{
              start++;
        end--;
          }
      }
        return 1;
        
    }
  int main(){
  string s;
    cout<<"enter value of string"<<endl;
     cin>>s;
     
     cout<<palingdrom(s);
    return 0;
}
